<Window x:Class="WpfDemo2.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helper="clr-namespace:WpfDemo2.Core.Helper"
        Title="登录" Width="1000" Height="560" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="White">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <!-- 输入框容器样式 -->
        <Style x:Key="InputBorderStyle" TargetType="Border">
            <Setter Property="Height" Value="36"/>
            <Setter Property="BorderBrush" Value="#D9D9D9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="2"/>
        </Style>
        
        <!-- 输入框内容样式 -->
        <Style x:Key="InputContentStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
        <!-- 密码输入框样式 -->
        <Style x:Key="PasswordInputStyle" TargetType="TextBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,0,36,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ShowPassword}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="12,0,36,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ShowPassword}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- 按钮样式 -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="RefreshButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D9D9D9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <Style x:Key="LoginButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="#409EFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style x:Key="PasswordToggleButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.5*"/>
            <ColumnDefinition Width="2.5*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#409EFF">
            <Image Source="/Assets/Images/login_bg.png" Stretch="UniformToFill"/>
        </Border>

        <Border Grid.Column="1" Background="White">
            <StackPanel Margin="60,80,60,60" VerticalAlignment="Center" MaxWidth="380">
                <TextBlock Text="登录" FontSize="24" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,6"/>
                <TextBlock Text="欢迎登录视频超融合AI平台" FontSize="12" Foreground="#999999" Margin="0,0,0,24"/>

                <!-- 手机号 -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Margin="0,0,0,6" FontSize="13">
                        <Run Text="手机号" Foreground="#666666"/>
                        <Run Text="*" Foreground="#FF4D4F"/>
                    </TextBlock>
                    <Border Style="{StaticResource InputBorderStyle}">
                        <TextBox Style="{StaticResource InputContentStyle}" Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"/>
                    </Border>
                </StackPanel>

                <!-- 密码 -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Margin="0,0,0,6" FontSize="13">
                        <Run Text="密码" Foreground="#666666"/>
                        <Run Text="*" Foreground="#FF4D4F"/>
                    </TextBlock>
                    <Border Style="{StaticResource InputBorderStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource PasswordInputStyle}"
                                     Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <PasswordBox Grid.Column="0" Grid.ColumnSpan="2" x:Name="PasswordBox" Style="{StaticResource PasswordBoxStyle}"
                                         helper:PasswordBoxHelper.BindPassword="True"
                                         helper:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            <Button Grid.Column="1" Style="{StaticResource PasswordToggleButtonStyle}" Command="{Binding TogglePasswordVisibilityCommand}">
                                <TextBlock FontSize="14" Foreground="#999999" Text="👁"/>
                            </Button>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- 验证码 -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Margin="0,0,0,6" FontSize="13">
                        <Run Text="验证码" Foreground="#666666"/>
                        <Run Text="*" Foreground="#FF4D4F"/>
                    </TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Style="{StaticResource InputBorderStyle}">
                            <TextBox Style="{StaticResource InputContentStyle}" Text="{Binding CaptchaInput, UpdateSourceTrigger=PropertyChanged}"/>
                        </Border>
                        <Border Grid.Column="1" Width="72" Height="36" Margin="8,0,8,0" Background="#F5F5F5" BorderBrush="#D9D9D9" BorderThickness="1" CornerRadius="2">
                            <TextBlock Text="{Binding CaptchaCode}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontSize="16" FontWeight="Bold" Foreground="#333333" FontFamily="Consolas"/>
                        </Border>
                        <Button Grid.Column="2" Content="刷新" Style="{StaticResource RefreshButtonStyle}" Command="{Binding RefreshCaptchaCommand}"/>
                    </Grid>
                </StackPanel>

                <!-- 记住密码和忘记密码 -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox Grid.Column="0" Content="记住密码" IsChecked="{Binding RememberMe}" Foreground="#666666" FontSize="13" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="2" Text="忘记密码" Foreground="#409EFF" FontSize="13" VerticalAlignment="Center" Cursor="Hand">
                        <TextBlock.InputBindings>
                            <MouseBinding Command="{Binding ForgotPasswordCommand}" MouseAction="LeftClick"/>
                        </TextBlock.InputBindings>
                    </TextBlock>
                </Grid>

                <Button Content="登录" Style="{StaticResource LoginButtonStyle}" Command="{Binding LoginCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
